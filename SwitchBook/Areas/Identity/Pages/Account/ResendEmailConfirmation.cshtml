@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Надіслати підтвердження пошти";
}

<h1>@ViewData["Title"]</h1>
<h2>Напишість свою пошту.</h2>
<hr/>
<div>
    <div class="d-flex justify-content-center">
        <form method="post" style="min-width: 400px;">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Email" class="form-label">Електронна пошта</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com"/>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-lg btn-primary">Надіслати</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}