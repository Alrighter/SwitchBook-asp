@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Забули пароль?";
}

<h1>@ViewData["Title"]</h1>
<h2>Введіть вашу електронну скриньку.</h2>
<hr/>
<div class="d-flex justify-content-center">
    <div class="col-md-4">
        <form method="post" class="d-flex flex-column justify-content-center">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Email" class="form-label">Електронна пошта</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn_book">Відновити пароль</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}